@model IEnumerable<livraria_les.Models.Cliente>
@{
    ViewBag.Title = "Cliente Index";
}

<h2>Clientes</h2>

<p> @Html.ActionLink("Registrar", "Registrar", "Usuario") </p>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Editor("Nome", new { htmlAttributes = new { @class = "form-control col-md-3", @placeholder = "Nome" } })
        @Html.Editor("Genero", new { htmlAttributes = new { @class = "form-control col-md-3", @placeholder = "Gênero" } })
        @Html.Editor("CPF", new { htmlAttributes = new { @class = "form-control col-md-3", @placeholder = "CPF" } })
        @Html.Editor("Ranking", new { htmlAttributes = new { @class = "form-control col-md-3", @placeholder = "Ranking" } })
        <select class="form-control col-md-3" id="Ativo" name="Ativo">
            <option value="" selected>Todos</option>
            <option value="0">Inativo</option>
            <option value="1">Ativo</option>
        </select>
    </div>
    <div class="row form-group">
        <div class="col-md-10">
            <input type="submit" value="Pesquisar" class="btn btn-primary" />
        </div>
    </div>
}

<table class="table" id="tblClientes">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayName("Ação")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </th>
                <td>
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Deletar", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>